<h1>Ready to build one?</h1>
<%= form_for @hubot, html: { class: 'form' } do |f| %>
  <fieldset>

    <%= f.label :name, "Name" %>
    <%= f.text_field :name, placeholder: 'hubot' %>
    <span class="help-block">What name your Hubot should respond to?</span>

    <%= f.label :adapter, "Adapter" %>
    <%= f.text_field :adapter, placeholder: 'irc' %>
    <span class="help-block">One of <a href="https://github.com/github/hubot/wiki#hubot-adapters">available adapters</a></span>

    <%= f.label :port, "HTTP Port" %>
    <%= f.text_field :port, placeholder: '8000' %>
    <span class="help-block">HTTP port that this Hubot should listen to</span>

    <%= f.label :test_port, "Test HTTP Port" %>
    <%= f.text_field :test_port, placeholder: '8001' %>
    <span class="help-block">HTTP port for testing interaction</span>

    <%= f.submit 'Create', class: 'btn btn-primary' %>
  </fieldset>
<% end %>
